<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clima.MainPage"
             Shell.NavBarIsVisible="false">

<Grid>
   <Grid.RowDefinitions>
        <RowDefinition Height="200"/>
        <RowDefinition Height="0"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="100"/>
        <ColumnDefinition Width="100"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>


<Image 
      Source="sol.jpg"
      Aspect="Fill"
      Grid.RowSpan="3"
      Grid.ColumnSpan="3"/>

<Frame
   x:Name="previsaotempo"
   Grid.Row="1"
   Grid.Column="1"
   BackgroundColor="##70d0d0"
   VerticalOptions="End"
   HeightRequest="120">
 </Frame>

<Frame
   x:Name="previsaosol"
   Grid.Row="1"
   Grid.Column="0"
   BackgroundColor="##70d0d0"
   VerticalOptions="End"
   HeightRequest="120">
   
   <Label x:Name= "LabelTemp"
   Text="tempo"
   TextColor="White"/>

   <Label x:Name= "LabelCity"
   Text="Cidade"
   TextColor="White"/>
 
 </Frame>

<Frame
   x:Name="previsaochuva"
   Grid.Row="1"
   Grid.Column="2"
   BackgroundColor="##70d0d0"
   VerticalOptions="End"
   HeightRequest="120">
 </Frame>






</Grid>
</ContentPage>
